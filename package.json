{
  "name": "ibom-popup-chat",
  "version": "1.2.1",
  "description": "IBom popup chat React component",
  "main": "lib/index.js",
  "module": "es/index.js",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/src",
      "runtimeArgs": [
        "--disable-web-security"
      ]
    }
  ],
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component --copy-files",
    "clean": "nwb clean-module && nwb clean-demo",
    "lint": "eslint src demo/src",
    "start": "nwb serve-react-app"
  },
  "dependencies": {
    "@microsoft/signalr": "^8.0.0",
    "axios": "^1.6.5",
    "emoji-js": "3.2.2",
    "moment": "^2.30.1",
    "prop-types": "15.5.10",
    "react-linkify": "^0.2.1",
    "reactjs-popup": "1.5.0"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "eslint-plugin-react": "^7.12.4",
    "nwb": "^0.25.0",
    "react": "16.0.0",
    "react-dom": "16.0.0"
  },

  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonnt2510/ibom-chat-popup"
  },
  "keywords": [
    "react-component"
  ],
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  }
}
